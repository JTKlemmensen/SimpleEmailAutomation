<UserControl x:Class="SimpleEmailAutomation.Views.FieldLine"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SimpleEmailAutomation.Views"
             mc:Ignorable="d">
    <Grid HorizontalAlignment="Center" Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="Identifier" Grid.Column="0" Width="150" Margin="0,0,5,0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox x:Name="Value" Grid.Column="1" Width="150"  HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <CheckBox x:Name="Dynamic" Grid.Column="2" VerticalAlignment="Center" Margin="5,0,0,0" ToolTip="Dynamic text: Is it a column in the csv?"></CheckBox>
        <Button x:Name="DeleteButton" Grid.Column="3" Margin="5,0,0,0" Padding="5" Content="-" Click="Button_Click"/>
    </Grid>
</UserControl>
