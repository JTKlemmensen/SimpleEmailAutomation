<Window x:Class="SimpleEmailAutomation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="675" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0">
            <Menu DockPanel.Dock="Top">
                <MenuItem Click="GoToSendMails" Header="Send Mails"/>
                <MenuItem Click="GoToSettings" Header="Settings"/>
            </Menu>
            <StackPanel></StackPanel>
        </DockPanel>
        <Grid x:Name="View" Grid.Row="1" VerticalAlignment="Center">

        </Grid>
    </Grid>
    
</Window>
